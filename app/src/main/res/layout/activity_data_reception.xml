<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDataReception">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fototop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ufg_2"/>

    <TextView
        android:id="@+id/tituloufg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad Francisco Gavidia"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_below="@id/fototop"/>
    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Nuevo Estudiante"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_below="@id/tituloufg"
        android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/lbl_datos_ingresados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="Los datos ingresados son: "
            android:layout_below="@id/subtitulo"/>
        <TextView
            android:id="@+id/lbl_nombres_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lbl_datos_ingresados"
            android:layout_marginTop="10dp"
            android:text="h "
            />

        <TextView
            android:id="@+id/lbl_apellidos_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_nombres_res"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" y"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/lbl_email_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text=" yh"
            android:layout_below="@id/lbl_apellidos_res"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/btnSalir"
            android:layout_below="@id/lbl_email_res"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>